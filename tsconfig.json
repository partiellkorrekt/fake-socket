{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "rootDir": "src",
    "declaration": true,
    "noImplicitThis": true
  }
}
